{
  "name": "zenc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm-run-all -p serve:* watch:* sync",
    "clean": "rimraf -V -I ./public/*",
    "watch:backend": "tsc --project ./functions --watch",
    "serve:backend": "firebase serve",
    "watch:frontend": "cd frontend && ./node_modules/.bin/vue-cli-service build --no-clean --dest ../public --watch",
    "serve:frontend": "cd frontend && ./node_modules/.bin/vue-cli-service serve",
    "sync": "sleep 10 && browser-sync start --proxy 'localhost:5000' --files 'public/*'"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "author": "Sam Fruechtemeyer, Eric Bender, Elijah Watson",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.1",
    "concurrently": "^8.0.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0"
  }
}
